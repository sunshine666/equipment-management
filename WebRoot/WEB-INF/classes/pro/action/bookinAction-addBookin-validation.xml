<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
          "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
          "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd" >
                    
<validators> 
    <field name="bi.book.bookISBN"> 
        <field-validator type="requiredstring" short-circuit="true"> 
            <message key="pro.book.requiredISBN"></message>
        </field-validator> 
    </field>
    <field name="bi.book.salePrice"> 
        <field-validator type="conversion">
        	<param name="repopulateField">true</param>
        	<message key="pro.book.salePrice.type"></message>
        </field-validator>

    </field>
    <field name="bi.buyNum"> 
 
        <field-validator type="conversion">
        	<param name="repopulateField">true</param>
        	<message key="pro.book.buyNum.type"></message>
        </field-validator>
    </field>

</validators>